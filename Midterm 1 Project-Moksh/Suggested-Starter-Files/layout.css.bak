body {
	margin: 0 auto;
	width: 100%;
	max-width: 1020px;
	min-width: 640px;
}

body > header {
	margin: 0;
	padding: 0px;
	width: 100%;
	overflow: hidden;
}



body > nav {
	width: 100%;
	float: left;
	margin: 0 0 0 2%;
}


img{
	float:right;
}

